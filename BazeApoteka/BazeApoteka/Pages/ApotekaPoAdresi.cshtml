@page "{id}"
@model BazeApoteka.Pages.ApotekaPoAdresiModel
@{
}

<form method="post">
    <input type="hidden" id="id" asp-for="@Model.Prosledjeno" />

    <div>
        <br />
        @if (Model.apoteke != null)
        {
            @foreach (BazeApoteka.Entiteti.Apoteka a in Model.apoteke)
            {
                <div class="font-weight-bold">
                    @a.Naziv
                </div>
                <div>Adresa: @a.Adresa</div>
                <div>Registarski broj: @a.RegistarskiBroj</div>
                
                <br />
                <br />
            }
        }

        @if (Model.apoteke.Count == 0)
        {
            <br />
            <div class="font-italic">Apoteka na adresi @Model.Prosledjeno ne postoji!</div>
            <br />
        }
    </div>
    <br />
    <input type="submit" value="Nazad" asp-page="./UcitajApoteku" />


</form>