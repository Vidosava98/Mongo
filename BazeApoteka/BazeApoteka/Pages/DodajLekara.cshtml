@page
@model BazeApoteka.Pages.DodajLekaraModel
@{
    ViewData["Title"] = "DodajLekara";
}

<form method="post">
    @if (!Model.ok)
    {
    <div>
        <br />
        <div><h4>Unesite podatke novog lekara</h4></div>
        <br />
        <div>Ime:</div>
        <input type="text" asp-for="@Model.Lekar.Ime" />
        <div>Prezime:</div>
        <input type="text" asp-for="@Model.Lekar.Prezime" />
        <div>Naziv ustanove gde radi:</div>
        <input type="text" asp-for="@Model.Lekar.UstanovaGdeRadi" />

        <br />
        <div>
            <br />
            <input type="submit" value="Dodaj" asp-page-handler="Dodaj" />
            <input type="submit" value="Nazad" asp-page="./Admin" />
        </div>
    </div>
    }
    else
    {
        <div>Uspesno ste dodali lekara @Model.Lekar.Ime @Model.Lekar.Prezime </div>
    }
</form>
