@page "{id}"
@model BazeApoteka.Pages.LekarPoUstanoviModel
@{
}

<form method="post">
    <input type="hidden" id="id" asp-for="@Model.Prosledjeno" />

    <div>
        <br />
        @if (Model.lekari.Count != 0)
        {
            @foreach (BazeApoteka.Entiteti.Lekar l in Model.lekari)
            {
                <div>
                    <div class="font-weight-bold">@l.Ime @l.Prezime</div>
                    <div>Ustanova u kojoj radi: @l.UstanovaGdeRadi</div>
                </div>
                <br />
                <br />
            }
        }

        @if (Model.lekari.Count == 0)
        {
            <br />
            <div class="font-italic">Ne postoji nijedan lekar koji radi u ustanovi @Model.Prosledjeno!</div>
            <br />
        }
    </div>
    <br />
    <input type="submit" value="Nazad" asp-page="./UcitajLekara" />


</form>