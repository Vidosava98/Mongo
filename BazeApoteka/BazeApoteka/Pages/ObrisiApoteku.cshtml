@page
@model BazeApoteka.Pages.ObrisiApotekuModel
@{
}
<form method="post">

    <div class="text-center">
        <h2>Lista svih apoteka</h2>
    </div>
    <br />
    <div>
        <br />
       @foreach (BazeApoteka.Entiteti.Apoteka a in Model.apoteke)
       {
            <div>
                <div class="font-weight-bold">Apoteka @a.Naziv</div>
                Adresa: @a.Adresa
                Registarski broj: @a.RegistarskiBroj
                @if (a.Farmaceuti != null)
                {
                    <div>Broj farmaceuta: @a.Farmaceuti.Count</div>
                }
                @if (a.Farmaceuti == null)
                {
                    <div>Broj farmaceuta: 0</div>
                }
                @if (a.Lekovi != null)
                {
                    <div>Broj dostupnih lekova: @a.Lekovi.Count</div>
                }
                @if (a.Lekovi == null)
                {
                    <div>Broj dostupnih lekova: 0</div>
                }


            </div>
       }
            <br />
            <br />
        
    </div>
    <div>
        Unesi registarski broj apoteke koju zelis obrisati:
        <input type="text" id="id" asp-for="@Model.Prosledjeno" />
        <input type="submit" value="Obrisi" asp-page-handler="Obrisi" />

    </div>

    <div><input type="submit" value="Nazad" asp-page="./Admin" /></div>
</form>