@page
@model BazeApoteka.Pages.ObrisiFarmaceutaModel
@{
}
<form method="post">
    @if (!Model.ok)
    {
    <div class="text-center">
        <h2>Lista svih farmaceuta</h2>
    </div>
    <br />
    <div>
        <br />
        @foreach (BazeApoteka.Entiteti.Farmaceut f in Model.farmaceuti)
        {
            <div>
                <div class="font-weight-bold">Ime farmaceuta @f.Ime</div>
                Prezime: @f.Prezime
                Plata: @f.Plata
                Id: @f.Id
            </div>

            <br />
            <br />
        }
    </div>
    <div>
        Unesi id farmaceuta kojeg zelis obrisati:
        <input type="text" id="id" asp-for="@Model.Prosledjeno" />
        <input type="submit" value="Obrisi farmaceuta" asp-page-handler="Obrisi" />

    </div>
    }
    else
    {
        <div>Uspesno ste obrisali farmaceuta sa id: @Model.Prosledjeno </div>
    }

    <div><input type="submit" value="Nazad" asp-page="./Admin" /></div>
</form>
