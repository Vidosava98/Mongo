@page
@model BazeApoteka.Pages.ObrisiKorisnikaModel
@{
}
<form method="post">

    <div class="text-center">
        <h2>Lista svih korisnika</h2>
    </div>
    <br />
    <div>
        <br />
        @foreach (BazeApoteka.Entiteti.Korisnik k in Model.korisnici)
        {
            <div>
                <div class="font-weight-bold">Ime korisnika: @k.Ime</div>
                Prezime: @k.Prezime
                Adresa: @k.Adresa
                Broj zdravstvene knjizice: @k.BrojZdravstveneKnjizice

            </div>

            <br />
            <br />
        }
    </div>
    <div>
        Unesi ime korisnika kog zelis ukloniti:
        <input type="text" id="id" asp-for="@Model.Prosledjeno" />
        <input type="submit" value="Obrisi" asp-page-handler="Obrisi" />

    </div>
    <div><input type="submit" value="Nazad" asp-page="./Admin" /></div>
</form>