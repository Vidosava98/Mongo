        <br />
        <div>Nomen medici: @Model.lekar.Ime @Model.lekar.Prezime </div>
        <br />
        <div>______________________________</div>
        <input type="submit" value="Sacuvaj recept" asp-page-handler="Dodaj" asp-route-id="@Model.recept.Id.ToString()"/>
        <input type="submit" value="Nazad" asp-page="./Lekar" />
    </form>
