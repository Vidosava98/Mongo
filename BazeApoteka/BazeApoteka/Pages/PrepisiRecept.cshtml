@page  "{id}"
@model BazeApoteka.Pages.PrepisiReceptModel
@{
    ViewData["Title"] = "PrepisiRecept";
}

    <form method="post">
        <br />
        <div class="font-weight-bold"> Inscriptio: @Model.lekar.UstanovaGdeRadi</div>
        <br />
        <div> NomenAegroti: @Model.pacijent.Ime @Model.pacijent.Prezime @Model.pacijent.BrojZdravstveneKnjizice @Model.pacijent.Adresa</div>
