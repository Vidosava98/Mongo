@page "{id}"
@model BazeApoteka.Pages.PrikazLekaraModel
@{
}
<form method="post">
    <div>
        <input type="hidden" id="id" asp-for="@Model.Prosledjeno" />

        
            <div>
                <div class="font-weight-bold">
                    Lekar: @Model.lekar.Ime @Model.lekar.Prezime
                </div>
                <br />
                <div>
                    Ustanova u kojoj radite: @Model.lekar.UstanovaGdeRadi
                </div>
                <br />
            </div>
        @foreach(BazeApoteka.Entiteti.Korisnik k in Model.pacijenti)
        {
            <div>
                @k.Ime @k.Prezime

                <input type="submit" value="Prepisi recept" asp-page-handler="PrepisiRecept" asp-route-pom="@k.Id.ToString()" asp-route-pom2="@Model.lekar.Id.ToString()" />
            </div>
        }
    </div>
    <br />
    <div>______________________________________</div>
    <div>
        <input type="submit" value="Nazad" asp-page="./Lekar" />
    </div>
</form>